@model List<CheeseMVC.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table class="table">

    <tr>
        <th>Menu Name</th>
    </tr>

    @foreach (var menu in Model)
    {
        <tr>
            <td><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a></td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}

<p><a asp-controller="Menu" asp-action="Add">Create New Menu</a></p>


