@model List<CheeseMVC.Models.CheeseCategory>

<h1>@ViewBag.Title</h1>

<table class="table">

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheese category yet!</p>
}

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>
